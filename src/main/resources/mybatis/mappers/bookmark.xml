<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.example.demo.dao.BookmarkDAO">

<insert id="insertBookmark" parameterType="bookmarkVO">
insert into bookmark_text(user_text,count) values(#{user_text},1)
</insert>
	<select id="selectCountByUser_text" parameterType="bookmarkVO" resultType="int">
	select count from bookmark_text where user_text=#{user_text}</select>
	
	<update id="updateCountByUser_text" parameterType="bookmarkVO">
	update bookmark_text set count=#{count} where user_text=#{user_text} </update>
	<select id="bookmarkList" resultType="bookmarkVO">
select * from bookmark_text
</select>
</mapper>  
  